{
    "$schema": "http://json-schema.org/draft-07/schema",
    "title": "CreateProduct",
    "type": "object",
    "properties": {
        "name": { "type": "string" },
        "price": { "type": "string" },
        "validity": { "type": "boolean" },
        "category": { "enum": [
            "carboidratos", 
            "verduras e legumes", 
            "frutas", 
            "leite e derivados", 
            "carnes e ovos", 
            "leguminosas e oleaginosas",
            "oleos e gorduras"
        ]}
    },
    "required": ["name", "price", "validity", "category"]
}